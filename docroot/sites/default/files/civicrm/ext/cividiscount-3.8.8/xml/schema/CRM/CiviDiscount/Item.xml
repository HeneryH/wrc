<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/CiviDiscount</base>
  <class>Item</class>
  <name>cividiscount_item</name>
  <comment>A discount item</comment>
  <add>1.0</add>
  <title>Discount Code</title>
  <labelField>code</labelField>
  <paths>
    <add>civicrm/cividiscount/discount/add?reset=1</add>
    <view>civicrm/cividiscount/discount/view?reset=1&amp;id=[id]</view>
    <update>civicrm/cividiscount/discount/edit?reset=1&amp;id=[id]</update>
    <delete>civicrm/cividiscount/discount/delete?reset=1&amp;id=[id]</delete>
  </paths>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Discount Item ID</comment>
    <add>1.0</add>
    <html>
      <label>ID</label>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>code</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>Discount Code</comment>
    <html>
      <label>Code</label>
      <type>Text</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>Discount Description</comment>
    <html>
      <type>Text</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>amount</name>
    <type>varchar</type>
    <length>255</length>
    <required>true</required>
    <comment>Amount of discount, actual or percentage</comment>
    <html>
      <label>Amount</label>
      <type>Text</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>amount_type</name>
    <type>varchar</type>
    <length>4</length>
    <required>true</required>
    <comment>Type of discount, actual or percentage</comment>
    <pseudoconstant>
      <callback>CRM_CiviDiscount_BAO_Item::amountTypes</callback>
    </pseudoconstant>
    <html>
      <label>Type</label>
      <type>Select</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>count_max</name>
    <type>int</type>
    <required>true</required>
    <comment>Max number of times this code can be used</comment>
    <html>
      <label>Max Uses</label>
      <type>Number</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>count_use</name>
    <type>int</type>
    <required>true</required>
    <default>0</default>
    <comment>Number of times this code has been used</comment>
    <html>
      <label>Usage Count</label>
      <type>Number</type>
    </html>
    <add>1.0</add>
  </field>
  <field>
    <name>events</name>
    <type>text</type>
    <comment>Serialized list of events for which this code can be used</comment>
    <serialize>SEPARATOR_BOOKEND</serialize>
    <add>1.0</add>
  </field>
  <field>
    <name>pricesets</name>
    <type>text</type>
    <comment>Serialized list of pricesets for which this code can be used</comment>
    <serialize>SEPARATOR_BOOKEND</serialize>
    <add>1.0</add>
  </field>
  <field>
    <name>memberships</name>
    <type>text</type>
    <comment>Serialized list of memberships for which this code can be used</comment>
    <serialize>SEPARATOR_BOOKEND</serialize>
    <add>1.0</add>
  </field>
  <field>
    <name>autodiscount</name>
    <type>text</type>
    <comment>Serialized list of entity-based attributes. A user with one of them has the discount automatically applied</comment>
    <serialize>JSON</serialize>
    <add>1.0</add>
  </field>
  <field>
    <name>organization_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact ID for the organization that originated this discount</comment>
    <add>1.0</add>
    <html>
      <label>Organization</label>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>organization_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <add>1.0</add>
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field>
    <name>active_on</name>
    <type>datetime</type>
    <comment>Date this discount activated</comment>
    <add>1.0</add>
    <html>
      <label>Start Date</label>
      <type>Select Date</type>
    </html>
  </field>
  <field>
    <name>expire_on</name>
    <type>datetime</type>
    <comment>Date this discount expires</comment>
    <add>1.0</add>
    <html>
      <label>End Date</label>
      <type>Select Date</type>
    </html>
  </field>
  <field>
    <name>is_active</name>
    <type>boolean</type>
    <comment>Is this discount active?</comment>
    <add>1.0</add>
    <html>
      <label>Enabled</label>
      <type>Radio</type>
    </html>
  </field>
  <field>
    <name>discount_msg_enabled</name>
    <type>boolean</type>
    <add>2.2</add>
  </field>
  <field>
    <name>discount_msg</name>
    <type>varchar</type>
    <length>255</length>
    <html>
      <label>Not Eligible Message</label>
      <comment>Message displayed to users not eligible for the discount</comment>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>filters</name>
    <type>text</type>
    <title>Discount Filters</title>
    <comment>What filters apply to this discount (json array)</comment>
    <serialize>JSON</serialize>
    <add>2.6</add>
  </field>
</table>
